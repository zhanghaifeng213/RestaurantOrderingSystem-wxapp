.vip{
  margin-top: 16rpx;
  height: 354rpx;
  box-shadow: 0 12px 12px 0 rgba(0,0,0,0.04),0 0 1px rgba(255,255,255,0.15) inset,0 1px #ffffff inset;
  background-color: #FFC491;
  position: relative
}
.vip-oval{
  position: absolute;
  left: -110rpx;
  top: -294rpx;
  width: 1306rpx;
  height: 562rpx;
  border-radius: 50%;
  background-image: linear-gradient(20deg, #FFFFFF 0%, rgba(0,0,0,0) 30%);
  background-color: #FFC491;
  background-blend-mode: soft-light
}
.vip-integral{
  position: absolute;
  right: 48rpx;
  top: 0;
  width: 606rpx;
  height: 216rpx;
}
.vip-info{
  position: absolute;
  left: 48rpx;
  bottom: 48rpx;
  width: 606rpx;
  height: 80rpx;
}
.vip-login{
  margin: 0;
  padding: 0;
  line-height: 1.2
}
.vip-login::after{
  border: none
}
.start{
  margin-top: 40rpx;
  height: 204rpx;
  background-image: linear-gradient(200deg,rgba(0,0,0,0), rgba(255,255,255,0.5));
  background-blend-mode: soft-light;
  position: relative;
  box-sizing: border-box;
  padding: 48rpx
}
.start-circle1,.start-circle2,.start-circle3{
  position: absolute;
  border-radius: 50%;
  background-color: rgba(255, 255, 255,0.2)
}
.start-circle1{
  left: 100rpx;
  top: -20rpx;
  width: 84rpx;
  height: 84rpx
}
.start-circle2{
  left: 208rpx;
  top: 152rpx;
  width: 192rpx;
  height: 192rpx
}
.start-circle3{
  left: 496rpx;
  top: 46rpx;
  width: 252rpx;
  height: 252rpx
}
.recommended{
  margin-top: 40rpx;
  height: 252rpx
}
.recommended:last-child{
  margin-bottom: 40rpx
}